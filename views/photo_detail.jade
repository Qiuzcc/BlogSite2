doctype html
html
  head
    link(rel="stylesheet" href="/bootstrap-5.1.3/css/bootstrap.min.css" crossorigin="anonymous")
    link(rel="stylesheet", href="/font-awesome-4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")

  body
    .container-fluid
      #photo-detail
        img.card-img(src=photo.file, alt="")
        #photo-detail-content
            h5.card-title #{photo.title}
            p.card-text #{photo.description}
            p.card-text #{photo.date}